extends ../layoutManager

block content
    .row
        .col-md-7
            div(style='position:relative;height:0;padding-bottom:47.12%')
                iframe(src=car.videolink, style='position:absolute;width:100%;height:100%;left:0', width='764', height='360', frameborder='0', gesture='media', allowfullscreen='')


        .col-md-5
            dl.dl-horizontal
                dt Car Id
                dd= car.carid
                dt Company
                dd= car.companyname
                dt Model
                dd= car.model
                dt Country
                dd= car.country
                dt Year
                dd= car.year
                dt Price
                dd= car.price
                dt Entype
                dd= car.engType
                dt Engvolume
                dd= car.engV
                dt Drive
                dd= car.drive

                dt Status
                dd= car.status
                dt body
                dd= car.body
                dt Registration
                dd= car.registration
                dt Summary
                dd= car.summary